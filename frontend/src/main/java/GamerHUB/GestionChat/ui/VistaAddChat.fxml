<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="253.0" prefWidth="281.0"
            style="-fx-background-color: #aafe79;" xmlns="http://javafx.com/javafx/8"
            fx:controller="GamerHUB.GestionChat.controller.ChatAddController">
    <children>
        <AnchorPane layoutX="22.0" layoutY="27.0" prefHeight="200.0" prefWidth="238.0"
                    style="-fx-background-color: #2fdd72; -fx-background-radius: 15;">
